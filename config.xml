<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="Houselock"
        version="1.0.0">

    <name>Houselock</name>
    <description>App to manage flat bills</description>
    <author href="" email="maja.chlodnicka@gmail.com">
        Maja Chłodnicka, Filip Tańcula, Kamil Pietrucha
    </author>
    <platform name="android"/>
    <icon src="icon.png"/>
    <splash src="splashscreen.png"/>

    <plugin name="cordova-plugin-device" spec="~1.1.4"/>
    <plugin name="cordova-plugin-whitelist"/>
    <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

    <access origin="http://*"/>
    <access origin="https://*"/>
    <access origin="*"/>

    <allow-navigation href="*"/>
    <allow-intent href="*"/>

    <plugin name="onesignal-cordova-plugin" spec="^2.1.1" source="npm" />

    <!-- Requires cli-6.4.0 but we recommend using the latest version. -->
    <preference name="phonegap-version" value="cli-7.0.1" />

    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="15" />

    <!-- Can omit if not targetting Windows Phone -->
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="WindowsToastCapable" value="true" />

</widget>